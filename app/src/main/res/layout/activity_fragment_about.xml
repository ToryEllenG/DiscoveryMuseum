<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:context="com.example.troygbv.discoverymuseum.Home.FragmentAbout">



    <ImageView
        android:id="@+id/imageView"
        android:layout_width="508dp"
        android:layout_height="338dp"
        app:srcCompat="@drawable/newabout"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="34dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginBottom="8dp"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="399dp"
        android:text="150 South Main Street, Harrisonburg, VA"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.502" />

    <TextView
        android:id="@+id/PhoneInfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="23sp"
        android:layout_marginTop="27dp"
        android:text="540-442-8900 | info@iexploremore.com"
        app:layout_constraintTop_toBottomOf="@+id/textView5"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:id="@+id/websiteButton"
        style="@style/Widget.AppCompat.Button.Borderless"
        android:layout_width="365dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:paddingBottom="15sp"
        android:textSize="18sp"
        android:text="http://www.iexploremore.com/"
        android:textColor="@android:color/holo_blue_dark"
        android:layout_marginTop="23dp"
        app:layout_constraintTop_toBottomOf="@+id/PhoneInfo"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <TextView
        android:id="@+id/textView7"
        android:layout_width="389dp"
        android:layout_height="171dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        android:textSize="24sp"
        android:text="Our mission is to engage young minds through interactive, multi-sensory learning experiences -- promoting a greater understanding of themselves and their world."
        android:textAlignment="center"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.501"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/websiteButton" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="297dp"
        android:layout_height="113dp"
        android:textSize="20sp"
        android:layout_marginTop="9dp"
        android:text="Explore More Discovery Museum is a 501(c)(3) non-profit organization."
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/textView7"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.501" />

    <LinearLayout
        android:layout_width="538dp"
        android:layout_height="126dp"
        android:orientation="horizontal"
        android:layout_marginTop="76dp"
        app:layout_constraintTop_toBottomOf="@+id/textView8"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

    <ImageButton
        android:id="@+id/facebook"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/facebook"
        android:layout_marginRight="150dp"
        app:layout_constraintVertical_bias="0.374" />

    <ImageButton
        android:id="@+id/twitter"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/twitter"
        android:layout_marginRight="150dp"/>

    <ImageButton
        android:id="@+id/instagram"
        style="@android:style/Widget.Material.Light.ImageButton"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:background="@null"
        android:scaleType="fitXY"
        app:srcCompat="@drawable/instagram"/>

</LinearLayout>

</android.support.constraint.ConstraintLayout>

    </ScrollView>