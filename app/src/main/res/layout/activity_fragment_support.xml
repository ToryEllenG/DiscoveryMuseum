<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="140dp"
        tools:layout_editor_absoluteY="92dp"
        android:gravity="center">


        <ImageView
            android:id="@+id/imageView16"
            android:layout_width="500dp"
            android:layout_height="200dp"
            app:srcCompat="@drawable/quote"
            tools:layout_editor_absoluteX="174dp"
            tools:layout_editor_absoluteY="81dp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="100dp"
            android:paddingTop="100dp">

        <ImageButton
            android:id="@+id/donateButton"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="150dp"
            android:layout_height="136dp"
            android:background="@null"
            android:scaleType="fitXY"
            android:layout_marginRight="200dp"
            app:srcCompat="@drawable/donate"
            tools:layout_editor_absoluteX="134dp"
            tools:layout_editor_absoluteY="424dp" />


        <ImageButton
            android:id="@+id/mailingList"
            style="@android:style/Widget.Holo.Light.ImageButton"
            android:layout_width="140dp"
            android:layout_height="136dp"
            android:background="@null"
            android:scaleType="fitXY"
            app:srcCompat="@drawable/mailinglist"
            tools:layout_editor_absoluteX="538dp"
            tools:layout_editor_absoluteY="424dp" />
            </LinearLayout>

        <Button
            android:id="@+id/supportBT"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Click here to find more ways to support us!"
            android:textColor="@android:color/holo_blue_dark"
            android:textSize="20sp"/>

    </LinearLayout>
</ScrollView>